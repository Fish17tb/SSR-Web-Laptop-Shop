<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Manage Order</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <!-- Header -->
    <%- include('../layout/header.ejs'); -%>
        <div id="layoutSidenav">
            <!-- Sidebar -->
            <%- include('../layout/sidebar.ejs'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Manage Orders</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admin/order">Order</a></li>
                                <li class="breadcrumb-item active">View Detail</li>
                            </ol>
                            <% const shownOrderIds=new Set(); %>
                                <% orderDetails.forEach(orderDetail=> { %>
                                    <% if (!shownOrderIds.has(orderDetail.order.id)) { %>
                                        <h3>Order Detail With id = <%= orderDetail.order.id %>
                                        </h3>
                                        <% shownOrderIds.add(orderDetail.order.id); %>
                                            <% } %>
                                                <% }) %>
                                                    <div>
                                                        <table class="table table-hover table-bordered">
                                                            <thead>
                                                                <th>Product</th>
                                                                <th>Name Product</th>
                                                                <th>Price</th>
                                                                <th>Quantity</th>
                                                                <th>Money</th>
                                                            </thead>
                                                            <tbody>
                                                                <%orderDetails.forEach(function(orderDetail) { %>
                                                                    <tr>
                                                                        <td>
                                                                            <img src="/images/product/<%=orderDetail.product.image %>"
                                                                                class="img-fluid rounded-circle"
                                                                                style="width: 80px; height: 80px;"
                                                                                alt="">
                                                                        </td>
                                                                        <td>
                                                                            <%=orderDetail.product.name%>
                                                                        </td>
                                                                        <td>
                                                                            <%= new Intl.NumberFormat('vi-VN', {
                                                                                style: "currency" , currency: "VND"
                                                                                }).format(orderDetail.product.price) %>
                                                                        </td>
                                                                        <td>
                                                                            <%=orderDetail.product.quantity%>
                                                                        </td>
                                                                        <td>
                                                                            <%= new Intl.NumberFormat('vi-VN', {
                                                                                style: "currency" , currency: "VND"
                                                                                }).format(orderDetail.order.totalPrice)
                                                                                %>
                                                                        </td>
                                                                    </tr>
                                                                    <% }) %>
                                                            </tbody>
                                                        </table>
                                                        <button
                                                            style="padding: 5px 20px; border: none; outline: none; background-color: #000; border-radius: 5px;">
                                                            <a style="text-decoration: none; color: #fff;"
                                                                href="/admin/order">Back</a>
                                                        </button>
                                                    </div>
                        </div>
                    </main>
                    <%- include('../layout/footer.ejs'); -%>
                </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
</body>

</html>