<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Manage User</title>

  <link href="/admin/css/styles.css" rel="stylesheet" />
  <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
  <!-- Header -->
  <%- include('../layout/header.ejs'); -%>
    <div id="layoutSidenav">
      <!-- Sidebar -->
      <%- include('../layout/sidebar.ejs'); -%>
        <div id="layoutSidenav_content">
          <main>
            <div class="container-fluid px-4">
              <h1 class="mt-4">Manage Users</h1>
              <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item active">User</li>
              </ol>
              <div>
                <div style="
                  display: flex;
                  justify-content: center;
                  justify-content: space-between;
                  margin-bottom: 10px;
                ">
                  <!--use JSON.stringify(listuser) to display data type JSON-->
                  <h3>List user</h3>
                  <a href="/admin/create-user"><button class="btn btn-primary">Create new user</button></a>
                </div>
                <table class="table table-hover table-bordered">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Address</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% listuser.forEach(function(user) { %>
                      <tr>
                        <td>
                          <%=user.id%>
                        </td>
                        <td>
                          <%=user.fullName%>
                        </td>
                        <td>
                          <%=user.email%>
                        </td>
                        <td>
                          <%=user.address%>
                        </td>
                        <td>
                          <div style="display: flex; gap: 10px">
                            <form action="/admin/handle-view-user/<%=user.id%>" method="get">
                              <button class="btn btn-warning">View</button>
                            </form>
                            <form action="/admin/handle-delete-user/<%=user.id%>" method="post">
                              <button type="submit" class="btn btn-danger">
                                Delete
                              </button>
                            </form>
                          </div>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </main>
          <%- include('../layout/footer.ejs'); -%>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
</body>

</html>